<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@mipmap/ic_star"
                android:width="24dp"
                android:height="24dp" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@mipmap/ic_unstar"
                android:width="24dp"
                android:height="24dp" />
        </layer-list>
    </item>
</selector>