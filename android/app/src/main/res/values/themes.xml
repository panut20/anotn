<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Android" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/animated_logo</item>
        <item name="android:windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.Android</item>
    </style>
    <style name="Theme.Android" parent="Base.Theme.Android" />
    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:background">@color/white</item>
        <item name="android:fontFamily">@font/font_elecsafe_reg</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>
    <style name="ThemeOverlay.TextView" parent="">
        <item name="android:background">@color/white</item>
    </style>
    <style name="ThemeOverlay.TextView.Bold" parent="ThemeOverlay.TextView">
        <item name="android:fontFamily">@font/font_elecsafe_bol</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ThemeOverlay.TextView.Regular" parent="ThemeOverlay.TextView">
        <item name="android:fontFamily">@font/font_elecsafe_reg</item>
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="ThemeOverlay.TextView.Error" parent="ThemeOverlay.TextView">
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="ThemeOverlay.Button" parent="">
        <item name="android:gravity">center</item>
    </style>
    <style name="ThemeOverlay.Button.Primary" parent="ThemeOverlay.Button">
        <item name="android:fontFamily">@font/font_elecsafe_reg</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ThemeOverlay.Button.Secondary" parent="ThemeOverlay.Button">
        <item name="android:fontFamily">@font/font_elecsafe_reg</item>
        <item name="android:textColor">@color/snow</item>
    </style>

</resources>